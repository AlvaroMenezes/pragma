<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundList">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/item_restaurant_thumb"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_camera" />

        <TextView
            android:id="@+id/item_restaurant_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="name"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/item_restaurant_cuisine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="cuisine"
            android:textColor="@color/textGrey"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_restaurant_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_restaurant_vote"
                android:textColor="@color/textGreyStrong"
                android:textSize="16sp"
                android:paddingRight="5dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_restaurant_votes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/textRed"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>